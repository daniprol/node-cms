<div class="container">
  <h3 class="alert alert-dark p-3 text-dark text-center">Edit Category</h3>

  <div class="row">
    <div class="col-6 mx-auto">
      <table class="table table-bordered text-center border-success text-white">
        <thead class="bg-primary">
          <tr>
            <th>Title</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody class="table-hover bg-dark category-list">
          <% categories.forEach(category => { %>

          <tr>
            <td><%= category.title %></td>
            <td class="d-flex justify-content-center">
              <a
                href="/admin/category/edit/<%= category._id %> "
                class="btn btn-sm btn-warning mr-2"
                role="button"
                >Edit</a
              >
              <form
                action="/admin/category/<%= category._id %>/?newMethod=DELETE"
                method="post"
              >
                <button class="btn btn-sm btn-danger" type="submit">
                  Delete
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <hr />

  <div class="row p-4">
    <div class="col-md-8">
      <form
        action="/admin/category/edit/<%= categoryToEdit._id %>/?newMethod=PUT"
        method="POST"
      >
        <div class="form-group">
          <label for="title">Title</label>
          <input
            type="text"
            class="form-control"
            id="category-title"
            name="title"
            placeholder="Edit Title"
            value="<%= categoryToEdit.title %> "
          />
        </div>
        <button class="btn btn-outline-warning btn-lg" type="submit">
          Edit category name
        </button>
      </form>
    </div>
  </div>
</div>
