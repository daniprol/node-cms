<div class="container">
  <% if (success_message.length) { %>

  <div class="auto-hide alert alert-success alert-dismissable fade show mt-3" role="alert">
    <strong><%= success_message %> </strong>

    <button class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

  <% } %> <% if (error_message.length) { %>

  <div class="auto-hide alert alert-danger alert-dismissable fade show mt-3" role="alert">
    <strong><%= error_message %> </strong>

    <button class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

  <% } %>
</div>
